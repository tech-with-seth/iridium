{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "type": "shell",
            "command": "npm run dev",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "."
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "npm run build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "start",
            "type": "shell",
            "command": "npm start",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "typecheck",
            "type": "shell",
            "command": "npm run typecheck",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "seed",
            "type": "shell",
            "command": "npm run seed",
            "problemMatcher": []
        },
        {
            "label": "prisma:generate",
            "type": "shell",
            "command": "npx prisma generate",
            "problemMatcher": []
        },
        {
            "label": "prisma:migrate",
            "type": "shell",
            "command": "npx prisma migrate dev",
            "problemMatcher": []
        },
        {
            "label": "prisma:studio",
            "type": "shell",
            "command": "npx prisma studio",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
